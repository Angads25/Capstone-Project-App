<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_margin="2dp"
    android:padding="2dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rowIcon"
            android:layout_width="@dimen/question_icon_size"
            android:layout_height="@dimen/question_icon_size"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/list_item_margin"
            tools:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/list_item_margin"
            android:layout_marginEnd="@dimen/list_item_margin"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/questionNo"
                android:maxLines="1"
                android:textSize="@dimen/main_ques_text_size"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Question No. 1"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/question"
                android:maxLines="2"
                android:textSize="@dimen/main_ans_text_size"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="What tastes better with pizza and any other random options also?"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/peeps"
                android:textSize="@dimen/main_ans_text_size"
                android:textColor="#529952"
                tools:text="123 people answered this."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="20dp"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent"
            android:background="#616161"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EEEFFF"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>