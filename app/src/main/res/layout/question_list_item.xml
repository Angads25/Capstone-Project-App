<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="#000000">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/question_icon_size"
        android:layout_height="@dimen/question_icon_size"
        android:layout_gravity="center_vertical"
        tools:src="@mipmap/ic_launcher"
        android:layout_margin="@dimen/list_item_margin" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/list_item_margin"
        android:layout_marginEnd="@dimen/list_item_margin"
        android:layout_marginTop="@dimen/list_item_margin"
        android:layout_marginBottom="@dimen/list_item_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/question"
            android:maxLines="2"
            android:textSize="@dimen/main_ques_text_size"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:textColor="#FFFFFF"
            tools:text="What tastes better with pizza and any other random options also?"/>

        <TextView
            android:id="@+id/peeps"
            android:textSize="@dimen/main_ans_text_size"
            tools:textColor="#FFFFFF"
            tools:text="123 people answered this."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:background="#ff5252"/>

</LinearLayout>